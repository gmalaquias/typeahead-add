<div ng-init="vm.init()">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h1>{{collection}}</h1>
                </div>

                <table class="table table-hover">
                    <thead>
						{{#each properties}}							
							<th>{{Name}}</th>
						{{/each}}
                    </thead>
                    <tbody>
                        <tr ng-repeat="item in vm.data">
							{{#each properties}}							
								<td ng-bind="item.{{Name}}"></td>
							{{/each}}
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>